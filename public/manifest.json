{
  "name": "Column View Bookmarks",
  "description": "Displays bookmarks in a column view.",
  "version": "1.0",
  "author": "Joe Oak",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "logo128.png"
  },
  "content_security_policy": "default-src 'self'; img-src chrome://favicon; object-src 'self'; script-src 'self';",
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "manifest_version": 2,
  "permissions": ["chrome://favicon/", "bookmarks", "storage"]
}
